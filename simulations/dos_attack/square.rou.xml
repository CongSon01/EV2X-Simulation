<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Vehicle Types -->
    <vType id="attacker" accel="2.6" decel="4.5" sigma="0.5" length="5" maxSpeed="13.89" color="red"/>
    <vType id="victim" accel="2.6" decel="4.5" sigma="0.5" length="5" maxSpeed="13.89" color="green"/>
    
    <!-- Routes -->
    <route id="route0" edges="A0toB0 B0toB1 B1toA1 A1toA0"/>
    <route id="route1" edges="B0toB1 B1toA1 A1toA0 A0toB0"/>
    <route id="route2" edges="B1toA1 A1toA0 A0toB0 B0toB1"/>
    
    <!-- ATTACKER SPAWNS FIRST (becomes node[0]) -->
    <vehicle id="attacker0" type="attacker" route="route0" depart="1" color="red"/>
    
    <!-- VICTIMS SPAWN AFTER -->
    <vehicle id="victim0" type="victim" route="route1" depart="3" color="green"/>
    <vehicle id="victim1" type="victim" route="route2" depart="5" color="green"/>
    
</routes>